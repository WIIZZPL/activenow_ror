<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<table id="tasks">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Due by</th>
      <th>Is done</th>
      <th>Action</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task | %>
      <th><%= task.name %></th>
      <th><%= task.desc %></th>
      <th style="text-align: center"><%= task.due %></th>
      <th style="text-align: center"><%= task.done ? "✔️" : "❌" %></th>
      <th style="text-align: center"><%= button_to "Toggle", toggle_done_task_path(task), method: :patch %></th>
      <th style="text-align: center"><%= button_to "Destroy", task, method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></th>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path %>